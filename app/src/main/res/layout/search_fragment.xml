<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chefmodo.homeActivity.HomeActivity">

    <ImageView
        android:id="@+id/screen_title"
        android:layout_width="150dp"
        android:layout_marginTop="80dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_text"
        />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:hint="@string/search_hint"
        android:paddingLeft="16dp"
        android:textColorHint="@color/casal"
        android:drawableRight="@drawable/magnifying_glass"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:backgroundTint="@color/casal"
        android:singleLine="true" />


</RelativeLayout>
